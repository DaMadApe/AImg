<MainContainer>:
    BoxLayout:
        orientation: 'vertical'
        # size_hint_y: None

        BoxLayout:
            padding: [20, 60, 20, 60]
            spacing: 20
            
            Button:
                text: 'Cargar imagen...'
                size_hint_x: 0.4
                on_release: root.load_popup()
            Button:
                id: btn1
                text: 'HistEq'
                size_hint_x: 0.2
                disabled: True
                on_release: root.selecEcualizador(0)
            Button:
                id: btn2
                text: 'CLAHE'
                size_hint_x: 0.2
                disabled: True
                on_release: root.selecEcualizador(1)
            Button:
                id: btn3
                text: 'M3'
                size_hint_x: 0.2
                disabled: True
                on_release: root.selecEcualizador(2)

        Label:
            id: pathLabel
            text: ''

        TexView:
            id: imgWidget
            source: ' '

        Slider:
            id: viewSlider
            min: 0
            max: 100
            value: 3
            on_value: root.slideCompare(*args)
            disabled: True

        Button:
            id: btnSave
            size_hint_x: 0.3
            size_hint_y: 0.3
            text: 'Guardar imagen...'
            on_release: root.save_popup()
            disabled: True


<Load_file_popup>:
    title: "Cargar imagen"
    size_hint: .9, .9
    BoxLayout:
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: "datos/"
            # FileChooserIconLayout

        BoxLayout:
            size_hint: (1, 0.1)
            pos_hint: {'center_x': .5, 'center_y': .5}
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)
                id: ldbtn
                disabled: True if filechooser.selection==[] else False


<Save_file_popup>:
    title: "Guardar imagen"
    size_hint: .9, .9
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: sfilechooser
            path: "datos/"
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.dismiss()

            Button:
                text: "Save"
                on_release: root.save(sfilechooser.path, text_input.text)
